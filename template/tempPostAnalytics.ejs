<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Analytics</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #1b1b1b;
            color: white;
        }

        .card-title {
            font-size: 2vh;
        }

        .container {
            background-color: #1b1b1b;
        }

        .card {
            background-color: #3a3a3a;
        }

        h2 {
            color: white;
        }

        .card-title {
            color: white;
        }

        #pie-chart {
            color: white;
        }

        #postTable th,
        #postTable td {
            border: 1px solid white;
            padding: 8px;
        }

        #postTable {
            width: 100%;
            margin-top: 20px;
        }
    </style>
</head>

<body>

    <div class="container my-5">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h2>Post analytics</h2>
                        <p>Date: <%= currentDate %></p>
                        <p>Time: <%= currentTime %></p>
                        <table id="postTable">
                            <thead>
                                <tr>
                                    <th>User Name</th>
                                    <th>Post Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% let totalPosts = 0; %>
                                <% for (const user in analyticsData) { %>
                                    <tr>
                                        <td><%= user %></td>
                                        <td><%= analyticsData[user] %></td>
                                    </tr>
                                    <% totalPosts += analyticsData[user]; %>
                                <% } %>
                                <tr>
                                    <td>Total Posts</td>
                                    <td><%= totalPosts %></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
