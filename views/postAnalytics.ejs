<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Analytics</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #1b1b1b;
            color: white;
        }

        .card-title {
            font-size: 2vh;
        }

        .container {
            background-color: #1b1b1b;
        }

        .card {
            background-color: #3a3a3a;
        }

        h2 {
            color: white;
        }

        .card-title {
            color: white;
        }

        #pie-chart {
            color: white;
        }

        #postTable th,
        #postTable td {
            border: 1px solid white;
            padding: 8px;
        }

        #postTable {
            width: 100%;
            margin-top: 20px;
        }
    </style>
</head>

<body>

    <div class="container my-5">
        <div class="row">
            <div class="col-lg-6 mx-auto">
                <div class="card">
                    <div class="card-body text-center">
                        <h2>Post Analytics</h2>
                        <canvas id="pieChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <p class="card-title">&#9776; Post Info</p>
                        <table id="postTable">
                            <thead>
                                <tr>
                                    <th>User Name</th>
                                    <th>Post Count</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% let totalPosts = 0; %>
                                <% for (const accountType in analyticsData) { %>
                                    <tr>
                                        <td><%= accountType %></td>
                                        <td><%= analyticsData[accountType] %></td>
                                    </tr>
                                    <% totalPosts += analyticsData[accountType]; %>
                                <% } %>
                                <tr>
                                    <td>Total Posts</td>
                                    <td><%= totalPosts %></td>
                                </tr>
                            </tbody>
                        </table>

                        <a href="/pdf/postAnalytics" class="btn btn-primary mt-3">PDF</a><br>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- postAnalytics.ejs -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const analyticsData = <%- JSON.stringify(analyticsData) %>;
            console.log(analyticsData);

            const pieChartCanvas = document.getElementById('pieChart').getContext('2d');
            new Chart(pieChartCanvas, {
                type: 'doughnut',
                data: {
                    labels: Object.keys(analyticsData).map(label => label.toLowerCase()),
                    datasets: [{
                        data: Object.values(analyticsData),
                        backgroundColor: ['#2ecc71', '#e74c3c', '#3498db', '#9b59b6', '#f1c40f', '#e67e22', '#e74c3c', '#34495e', '#95a5a6', '#2c3e50']
                    }]
                }
            });
        });
    </script>

</body>

</html>
