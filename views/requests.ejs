<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Follow Requests</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #000000;
            margin: 0;
            padding: 0;
            color: white;
        }

        header {
            font-family: 'Space Monkey';
            text-align: center;
        }

        .followers-container {
            max-width: 600px;
            margin: 20px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            color: black;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #ddd;
            padding: 10px 0;
        }

        .user-info {
            display: flex;
            align-items: center;
        }

        .profile-photo {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            margin-right: 10px;
        }

        .profile-photo:hover {
            box-shadow: 0 0 10px rgb(0, 0, 0);
        }

        .username {
            margin-right: 10px;
            color: black;
        }

        .username:hover {
            text-decoration: underline;
            border-radius: 0cm;
            background-color: #555;
            color: white;
        }

        .btn {
            text-decoration: none;
            color: #333;
            display: inline-block;
            margin-top: 10px;
            padding: 10px 20px;
            background-color: #333;
            color: #fff;
            border-radius: 4px;
        }

        a:hover {
            background-color: #555;
        }
    </style>
</head>

<body>
    <header>
        <h1>List of Follow Requests</h1>
    </header>

    <div class="followers-container">
        <ul>
            <% requests.forEach(request=> { %>
                <li>
                    <div class="user-info">
                        <img class="profile-photo" src="/uploads/profileImages/<%= request.Follower_ID.userPhoto %>"
                            alt="User Photo">
                        <a href="/profile/<%= request.Follower_ID._id %>">
                            <span class="username">
                                <%= request.Follower_ID.username %>
                            </span>
                        </a>
                    </div>

                    <button><a class="btn" href="/follow/acceptRequest/<%= request.Follower_ID._id %>">+
                            Accept</a></button>
                    <button><a class="btn" href="/follow/rejectRequest/<%= request.Follower_ID._id %>">-
                            Reject</a></button>

                </li>
                <% }); %>
        </ul>
        <a href="/goback">Go Back</a>
    </div>
</body>

</html>