<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="styleDProfile1.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>

<body>

    <div class="profile-container">
        <div class="profile-header">
            <img src="/uploads/profileImages/<%= user.userPhoto %>" alt="Profile Picture">
            <div class="profile-info">
                <h1 id="usrname">
                    <%= user.username %>
                </h1>
                <div class="usertype">
                    <p>
                        <%= user.accountType %>
                    </p>
                </div>
                <div class="counts" style="width: 90%;">
                    <table>
                        <tr>
                            <th class="Followers" id="data">Followers: <%= user.followersCount %>
                            </th>
                            <th class="Following" id="data">Following: <%= user.followingCount %>
                            </th>
                            <th class="Post" id="data">Post: <%= user.postCount %>
                            </th>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="multiline-text">
            <lable id="ach"><b>Achievement bio:</b>
                <%= user.bio %>
            </lable><br><br>
            <lable id="req"><b>Requirements:</b>
                <%= user.requirements %>
            </lable><br><br>
        </div>
        <div class="opt-r">
            <button><a class="prev" href="/follow/sendRequest/<%= user._id %>">&plus; Follow</a></button>
            <a href="/chat/personal/<%= user._id %>"><button>&#9993; Message</button></a>
            <button><a class="prev" href="/search">Go Back</a></button>
        </div>
        <h2># POST GRID<h2>

                <div class="posts">

                    <% userPosts.forEach(post=> { %>
                        <div class="profile-container">
                            <div class="profile-i">
                                <img src="/uploads/profileImages/<%= user.userPhoto %>" alt="<%= user.username %>">
                                <div class="username">
                                    <%= user.username %>
                                </div>
                            </div>
                            <div class="post">
                                <div class="post-img">
                                    <img src="/uploads/posts/<%= post.Content_URL %>" alt="<%= user.username %>'s Post">
                                </div>
                                <div class="post-actions">
                                    <a href="/like/<%= post._id %>/<%= user._id %>" id="like-btn">
                                        <i class="fas fa-heart">
                                            <%= post.Like_Count %>
                                        </i>
                                    </a>
                                    <a href="#" onclick="postComment('<%= post._id %>')" id="cmt-btn">
                                        <i class="fas fa-comment">
                                            <%= post.Comment_Count %>
                                        </i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <% }); %>
                </div>
    </div>

    <script src="index.js"></script>

</body>

</html>