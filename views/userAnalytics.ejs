<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .card-title {
            font-size: 2vh;
        }
    </style>
</head>

<body class="bg-light">

    <div class="container my-5">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <h2>User analytics</h2>
                        <canvas id="pieChart"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <p class="card-title">&#9776;User Info</p>
                        <ul id="userList" class="list-group">
                            <% let totalUsers = 0; %>
                            <% for (const accountType in analyticsData) { %>
                                <li class="list-group-item">
                                    <%= accountType %>: <%= analyticsData[accountType] %>
                                </li>
                                <% totalUsers += analyticsData[accountType]; %>
                            <% } %>
                            <li class="list-group-item">
                                Total Users: <%= totalUsers %>
                            </li>
                        </ul>
                        
                        <a href="/userAnalytics/userList" class="btn btn-primary mt-3">User List</a>
                        <!-- <a class="btn btn-primary mt-3" href="/admin/dashboard">Go Back</a> -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- useranalytics.ejs -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const analyticsData = <%- JSON.stringify(analyticsData) %>;
            console.log(analyticsData);

            const pieChartCanvas = document.getElementById('pieChart').getContext('2d');
            new Chart(pieChartCanvas, {
                type: 'doughnut',
                data: {
                    labels: Object.keys(analyticsData).map(label => label.toLowerCase()),
                    datasets: [{
                        data: Object.values(analyticsData),
                        backgroundColor: ['#3498db', '#2ecc71', '#e74c3c']
                    }]
                }
            });
        });
    </script>

</body>

</html>
